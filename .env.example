# ========================================
# Telegram 机器人配置（必填）
# ========================================

# Telegram Bot Token（从 @BotFather 获取）
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Telegram Chat ID（从 @userinfobot 获取）
TELEGRAM_CHAT_ID=your_chat_id_here

# ========================================
# 监控周期开关（true=开启，false=关闭）
# ========================================

ENABLE_5M=false      # 5分钟周期（噪音较多，建议关闭）
ENABLE_15M=true      # 15分钟周期（捕捉短线突破）
ENABLE_1H=true       # 1小时周期（短期趋势确认）
ENABLE_4H=true       # 4小时周期（波段机会）
ENABLE_1D=true       # 1天周期（中长期趋势）

# ========================================
# 价格变动阈值（百分比 %）
# ========================================

PRICE_THRESHOLD_5M=3        # 5分钟周期阈值
PRICE_THRESHOLD_15M=4     # 15分钟周期阈值
PRICE_THRESHOLD_1H=5      # 1小时周期阈值
PRICE_THRESHOLD_4H=6      # 4小时周期阈值
PRICE_THRESHOLD_1D=7.0      # 1天周期阈值

# ========================================
# 告警控制设置
# ========================================

COOLDOWN_MINUTES=30         # 冷却时间（分钟）- 同一交易对再次提醒的间隔
MAX_ALERTS_PER_DAY=3        # 每日最大提醒次数（同一交易对）

# ========================================
# 量能分析设置
# ========================================

VOLUME_MEDIAN_PERIODS=20    # 量能中位数计算周期（K线根数）
MIN_VOLUME_MULTIPLIER=1.0   # 最小量能倍数（低于此倍数不提醒）

# ========================================
# API 请求设置
# ========================================

CONCURRENCY_LIMIT=10        # 并发请求数量（建议 5-15，国内建议5）

# ========================================
# 代理设置（可选，国内用户需要）
# ========================================

# HTTP 代理地址（取消注释并填写你的代理地址）
# HTTP_PROXY=http://127.0.0.1:7890

# HTTPS 代理地址（取消注释并填写你的代理地址）
# HTTPS_PROXY=http://127.0.0.1:7890

# ========================================
# 日志设置
# ========================================

LOG_LEVEL=info              # 日志级别: debug | info | warn | error

# ========================================
# TA-Lib 微服务设置（可选，进阶功能）
# ========================================

# TA-Lib 服务地址（默认本地5000端口）
# 如果不设置，默认使用 http://localhost:5000
# 如果 Python 服务未运行，会自动降级到基础形态识别
# TALIB_SERVICE_URL=http://localhost:5000

# ========================================
# 使用说明
# ========================================

# 1. 将本文件重命名为 .env
#    Windows: ren config.example .env
#    Linux:   mv config.example .env
#
# 2. 修改 TELEGRAM_BOT_TOKEN 和 TELEGRAM_CHAT_ID（必填）
#
# 3. 国内用户需要配置代理（取消 HTTP_PROXY 的注释）
#
# 4. 其他参数可选（已有优化默认值）
#
# 5. 启动服务
#    npm start
#    或
#    pm2 start src/index.js --name smart-crypto-alert

